#version 330 core

uniform mat4 view_proj;
uniform mat4 model;

in vec3 a_pos;
in vec2 a_tex_coord;
in vec3 a_normal;

out vec2 VTexCoord;
out vec3 VNormal;

void main()
{
	// Pass the tex coord to the fragment shader
	VTexCoord = a_tex_coord;
	// Pass the normal to the fragment shader
	VNormal = a_normal;
	
	// Transform the position by the model view projection matrix.
	gl_Position =  view_proj * model * vec4(a_pos, 1.0);
}